# MongoDB Atlas Connection String
# Replace with your actual MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=SecApp

# Flask Secret Key (for session encryption)
# Generate with: python generate_keys.py
FLASK_SECRET_KEY=your-flask-secret-key-here

# Fernet Key (for message encryption)
# Generate with: python generate_keys.py
FERNET_KEY=your-fernet-key-here

# Message View Duration (seconds)
# How long messages are visible before auto-hiding
VIEW_SECONDS=10

# Upload Directory (optional, defaults to "uploads")
UPLOAD_DIR=uploads

# Server Port (optional, defaults to 5000)
# Railway/Render will set PORT automatically
PORT=5000

